<div class="task-list">
  <h1 class="todo">Todo</h1>
  <div class="row">
    <div class="col-md-6">
      <table class="todo table table-bordered">        
        <tbody>
          <tr>
            <th>&nbsp;</th>
            <th>Task</th>
            <th>Archive</th>          
          </tr>        
          <% @tasks.each do |task| %>
          <%= render :partial => 'task_entry', :locals => {:task => task} %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="new-todo">
      <%= form_for(@task, :remote => true) do |f| %>
        <div class="col-md-2">
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="col-md-1">
          <%= f.submit class: "btn btn-warning" %>        
        </div>
      <% end %>
    </div>
  </div>

  <h1 class="done">Done</h1>
  <div class="col-md-6">
    <table class="done table table-bordered">
      <tbody>
        <tr>
          <th>&nbsp;</th>
          <th>Task</th>
          <th>Archive</th>          
        </tr>
      <% @tasks_done.each do |task| %>
          <%= render :partial => 'task_entry', :locals => {:task => task} %>
      <% end %>
      </tbody>
    </table>  
  </div>
</div>
